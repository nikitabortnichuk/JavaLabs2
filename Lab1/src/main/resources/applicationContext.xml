<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.bortnichuk"/>
    <context:annotation-config/>

    <bean id="windowView" class="com.bortnichuk.view.WindowView">
        <constructor-arg ref="windowController"/>
    </bean>

    <bean id="windowController" class="com.bortnichuk.controller.WindowController">
        <property name="service" ref="windowServiceProxy"/>
    </bean>

</beans>